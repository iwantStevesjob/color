<body class="bg-gray-50 flex flex-col items-center justify-center min-h-screen p-4 font-sans">

    <!-- Loading Indicator -->
    <div id="loadingIndicator" class="hide-on-pdf fixed top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 z-50 p-4 bg-indigo-600 text-white rounded-lg shadow-xl" style="display: none;">
        <div class="flex items-center space-x-3">
            <svg class="animate-spin h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <p id="loadingMessage">Processing file...</p>
        </div>
    </div>
    
    <!-- Upload Interface (Initial State) -->
    <section id="uploadSection" class="w-full max-w-xl">
        <div id="dropzone" class="dropzone flex flex-col items-center justify-center h-64 p-6 bg-white rounded-xl cursor-pointer hover:bg-gray-50 transition duration-150">
            <input type="file" id="fileInput" accept=".docx, .txt, .md" class="hidden"> 
            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-indigo-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-4 4 4 4-4v1z" clip-rule="evenodd" />
            </svg>
            <p class="mt-2 text-lg font-semibold text-gray-700">Drag & Drop your document here</p>
            <p class="text-sm text-gray-500">or click to select a file (Supports DOCX, TXT, MD)</p>
            <button onclick="document.getElementById('fileInput').click()" class="mt-4 bg-indigo-500 text-white py-2 px-4 rounded-lg shadow-md hover:bg-indigo-600 transition">
                Browse Files
            </button>
        </div>
        <p class="mt-4 text-center text-sm text-gray-600">
            DOCX support uses the core Mammoth.js settings for maximum reliability.
        </p>
    </section>

    <!-- Download Button Wrapper (Fixed at bottom with padding/margin) -->
    <div id="downloadButtonWrapper" class="fixed bottom-0 left-0 right-0 z-50 p-4" style="display: none;">
        <button id="downloadButton" 
                class="w-full bg-indigo-700 hover:bg-indigo-800 text-white 
                       font-extrabold text-lg py-3 rounded-xl shadow-2xl 
                       transition duration-200 ease-in-out 
                       transform active:bg-indigo-900 focus:outline-none">
            Download PDF
        </button>
    </div>

    <!-- Content Container (Hidden until file is loaded, with padding for the fixed button) -->
    <main id="contentContainer" class="w-full pb-20" style="display: none;">
        <div id="content" class="document-page bg-white w-full max-w-3xl p-8 md:p-12 lg:p-16 mb-12 rounded-xl mx-auto">
            <!-- Converted HTML Content will be inserted here -->
        </div>
    </main>

    <!-- Load external libraries -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/mammoth/1.11.0/mammoth.browser.min.js"></script> 

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const uploadSection = document.getElementById('uploadSection');
            const fileInput = document.getElementById('fileInput');
            const dropzone = document.getElementById('dropzone');
            const contentContainer = document.getElementById('contentContainer');
            const contentDiv = document.getElementById('content');
            const downloadButtonWrapper = document.getElementById('downloadButtonWrapper');
            const downloadButton = document.getElementById('downloadButton');
            const loadingIndicator = document.getElementById('loadingIndicator');
            const loadingMessage = document.getElementById('loadingMessage');
            let uploadedFileName = 'document';

            // --- Utility Functions ---

            function getFileExtension(filename) {
                return filename.split('.').pop().toLowerCase();
            }

            // --- State Management ---
            function showLoading(message) {
                loadingMessage.textContent = message;
                loadingIndicator.style.display = 'block';
            }

            function hideLoading() {
                loadingIndicator.style.display = 'none';
            }

            function showContentState() {
                uploadSection.style.display = 'none';
                contentContainer.style.display = 'block';
                downloadButtonWrapper.style.display = 'block'; // Show the wrapper
            }
            
            function showErrorState(message) {
                hideLoading();
                contentDiv.innerHTML = `<div class="text-center p-8"><h1 class="text-3xl font-bold text-red-600">Conversion Error</h1><p class="mt-4 text-gray-700">${message}</p></div>`;
                showContentState();
            }

            // --- Text File (TXT/MD) Conversion Fallback (Simplified) ---
            function wrapTextInHtml(text, filename) {
                const lines = text.split('\n').filter(line => line.trim() !== '');
                
                let htmlContent = '';
                let title = filename.split('.').slice(0, -1).join('.');

                if (lines.length > 0) {
                    title = lines[0].trim().replace(/#+\s*/, ''); 
                    
                    htmlContent += `<header class="text-center mb-8">
                                        <h1 class="text-4xl font-extrabold text-gray-800 border-b-2 border-indigo-200 pb-2">
                                            ${title}
                                        </h1>
                                        <p class="text-gray-500 mt-2">Content converted from plain text file.</p>
                                    </header>`;
                    
                    for (let i = 1; i < lines.length; i++) {
                        const line = lines[i].trim();
                        if (line.startsWith('##')) {
                            htmlContent += `<h2 class="text-2xl font-semibold text-indigo-700 mt-6">${line.replace(/#+\s*/, '')}</h2>`;
                        } else if (line.length > 1) {
                            htmlContent += `<p class="text-gray-700 mb-3">${line}</p>`;
                        }
                    }
                } else {
                     htmlContent = `<h1 class="text-3xl font-bold text-gray-600">Empty Document</h1><p class="mt-4 text-gray-500">The uploaded file did not contain any visible text content.</p>`;
                }
                
                return htmlContent;
            }

            // --- Main File Handling Logic ---

            function handleFile(file) {
                uploadedFileName = file.name.replace(/\.[^/.]+$/, "");
                const extension = getFileExtension(file.name);

                if (extension === 'docx') {
                    handleDocx(file);
                } else if (extension === 'txt' || extension === 'md') {
                    handleTextFile(file);
                } else {
                    showErrorState('Unsupported file type. Please use .docx, .txt, or .md.');
                }
            }

            function handleTextFile(file) {
                showLoading('Reading and formatting text file...');
                const reader = new FileReader();
                reader.onload = function(e) {
                    try {
                        const rawText = e.target.result;
                        contentDiv.innerHTML = wrapTextInHtml(rawText, file.name);
                        hideLoading();
                        showContentState();
                    } catch (error) {
                        showErrorState('Error processing text file. Check console for details.');
                        console.error('Error processing text file:', error);
                    }
                };
                reader.onerror = (e) => {
                    showErrorState('An error occurred reading the text file.');
                    console.error('FileReader error:', e);
                };
                reader.readAsText(file);
            }

            function handleDocx(file) {
                showLoading('Converting DOCX to HTML using mammoth.js (maximum stability mode)...');
                
                if (typeof mammoth === 'undefined' || typeof mammoth.convertToHtml !== 'function') {
                    showErrorState('Mammoth.js library is not available. Please check the network connection.');
                    console.error('FATAL ERROR: Mammoth.js is unavailable.');
                    return;
                }
                
                const reader = new FileReader();
                reader.onload = async function(e) {
                    try {
                        const arrayBuffer = e.target.result;
                        
                        // MAXIMUM STABILITY: Only include essential image handling, remove styleMap.
                        const result = await mammoth.convertToHtml({arrayBuffer: arrayBuffer}, {
                            image: mammoth.images.dataUri()
                            // Note: StyleMap removed for stability.
                        });
                        
                        if (result.messages.length > 0) {
                            console.warn('Mammoth.js Conversion Warnings:', result.messages);
                        }

                        const htmlContent = `
                            <header class="text-center mb-8">
                                <h1 class="text-4xl font-extrabold text-gray-800 border-b-2 border-indigo-200 pb-2">
                                    ${uploadedFileName}
                                </h1>
                                <p class="text-gray-500 mt-2">Content converted from DOCX file. (Default formatting used for best stability.)</p>
                            </header>
                            <div class="mammoth-content">${result.value}</div>
                        `;

                        contentDiv.innerHTML = htmlContent;
                        hideLoading();
                        showContentState();

                    } catch (error) {
                        const userMessage = "The DOCX file may be corrupted, password-protected, or contain highly complex, unsupported features. Please try simplifying the document (e.g., saving as a new simple DOCX).";
                        showErrorState(userMessage);
                        console.error('Mammoth.js Conversion Error:', error);
                    }
                };

                reader.onerror = (e) => {
                    showErrorState('An error occurred reading the DOCX file. The file may be too large or access was denied.');
                    console.error('FileReader error:', e);
                };
                reader.readAsArrayBuffer(file);
            }

            // --- Drag and Drop Handlers ---
            dropzone.addEventListener('dragover', (e) => {
                e.preventDefault();
                dropzone.classList.add('dragover');
            });
            
            dropzone.addEventListener('dragleave', () => {
                dropzone.classList.remove('dragover');
            });
            
            dropzone.addEventListener('drop', (e) => {
                e.preventDefault();
                dropzone.classList.remove('dragover');
                if (e.dataTransfer.files.length) {
                    const file = e.dataTransfer.files[0];
                    handleFile(file);
                }
            });

            fileInput.addEventListener('change', (e) => {
                if (e.target.files.length) {
                    handleFile(e.target.files[0]);
                }
            });


            // --- PDF Generation Logic ---

            function sleep(ms) {
                return new Promise(resolve => setTimeout(resolve, ms));
            }

            async function generatePdf() {
                downloadButton.textContent = "Generating PDF...";
                showLoading('Generating PDF (this may take a few seconds)...');

                // Temporarily hide the button wrapper during conversion to exclude it from the PDF
                downloadButtonWrapper.classList.add('hide-on-pdf');

                let retryCount = 0;
                const maxRetries = 3;

                while (retryCount < maxRetries) {
                    try {
                        const options = {
                            margin: [10, 10, 10, 10], // top, left, bottom, right in mm
                            filename: `${uploadedFileName}_Converted.pdf`,
                            image: { type: 'jpeg', quality: 0.98 },
                            html2canvas: { scale: 2, logging: false, dpi: 192, letterRendering: true },
                            jsPDF: { unit: 'mm', format: 'a4', orientation: 'portrait' }
                        };

                        await html2pdf().from(contentDiv).set(options).save();
                        
                        break; 

                    } catch (error) {
                        console.error('PDF generation failed on attempt', retryCount + 1, ':', error);
                        retryCount++;
                        if (retryCount < maxRetries) {
                            const delay = Math.pow(2, retryCount) * 1000;
                            await sleep(delay);
                        } else {
                            showErrorState('PDF conversion failed after several attempts. Check the console for details.');
                        }
                    }
                }

                // Restore the UI state
                downloadButtonWrapper.classList.remove('hide-on-pdf');
                downloadButton.textContent = "Download PDF";
                hideLoading();
            }

            downloadButton.addEventListener('click', generatePdf);
        });
    </script>
</body>
</html>

